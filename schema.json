{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "user": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 4
          },
          "username": {
            "type": "string"
          }
        },
        "required": ["email", "password", "username"],
        "additionalProperties": false
      }
    },
    "required": ["user"],
    "additionalProperties": false
  }
  